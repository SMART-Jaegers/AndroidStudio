<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#9176FF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/btnback"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:onClick="backToOkko"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/icons8_left_100" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/okko_text_view_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="@string/okko"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

            <TextView
                android:id="@+id/a_95_euro_okko_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="@string/a_95_euro"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="210dp"
                android:layout_height="180dp"
                app:srcCompat="@drawable/good_fuel_plus" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/the_density_of_this_fuel_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:text="@string/the_density_of_this_fuel"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

            <TextView
                android:id="@+id/should_be_within_this_range_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/the_density_of_this_fuel_in_good_fuel"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp"
                android:text="@string/should_be_within_this_range"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#745FC9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/min_density_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:text="700"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

            <TextView
                android:id="@+id/max_density_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:text="800"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/green_this_is_density_of_your_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/this_is_density_of_your_fuel"
                android:textColor="#32D853"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <Button
                android:id="@+id/btnhome"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/violet_button"
                android:onClick="backToMain"
                android:text="@string/go_home"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>