<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.SmartJeagers.CheckFuel.GoodFuel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#9176FF">

        <ImageView
            android:id="@+id/exitFromStationInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/go_back"
            android:onClick="backToGasStation"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/icons8_left_100" />

        <ImageView
            android:id="@+id/goHomeFromStationInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="360dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/go_home"
            app:srcCompat="@drawable/white_home" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/UkrNafta"
            android:layout_width="180dp"
            android:layout_height="190dp"
            android:layout_marginStart="230dp"
            android:contentDescription="@string/go_back"
            app:srcCompat="@drawable/Ukrnafta_purple" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/date_underlined_text_for_gas_station_info"
            android:textColor="#8E93B5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Okko"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="65dp"
            android:text="@string/name_bold_text_for_gas_station_info"
            android:textColor="#8E93B5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/okko2"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:text="@string/adress_bold_text_for_gas_station_info"
            android:textColor="#8E93B5" />

        <TextView
            android:id="@+id/okko3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:text="@string/adress_more_bold_text_for_gas_station_info"
            android:textColor="#8E93B5" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B2B2B2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <TextView


            android:id="@+id/Refueling"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="210dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/refueling_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/density"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="270dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/density_bold_text_for_gas_station_info"
            android:textColor="#32D853"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume consumed days"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="150dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/days_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume consumed liters"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="90dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/liters_all_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume consumed liters all"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/liters_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume consumed1"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/volume_consumed"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume consumed2"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:text="@string/volume_consumed"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume consumed"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:text="@string/volume_consumed"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Refueling on this"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="210dp"
            android:text="@string/refueling_on_this_gas_station"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Density"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="270dp"
            android:text="@string/density"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />
    </RelativeLayout>

</LinearLayout>