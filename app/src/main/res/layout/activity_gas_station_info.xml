<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".GasStationInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#9176FF">

        <ImageView
            android:id="@+id/exitFromStationInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:contentDescription="@string/go_back"
            android:onClick="backToUsageStatistic"
            android:scaleType="centerCrop"
            android:src="@drawable/icons8_left_100" />

        <ImageView
            android:id="@+id/goHomeFromStationInfo"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/go_home"
            android:onClick="backToMain"
            android:src="@drawable/white_home" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/StationImage"
            android:layout_width="180dp"
            android:layout_height="190dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="230dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/go_back"
            android:src="@drawable/purple_okko" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/date_underlined_text_for_gas_station_info"
            android:textColor="#8E93B5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/StationName"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@id/Date"
            android:layout_marginStart="20dp"
            android:text="@string/name_bold_text_for_gas_station_info"
            android:textColor="#8E93B5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/okko2"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_below="@id/type_fuel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/adress_bold_text_for_gas_station_info"
            android:textColor="#8E93B5" />

        <TextView
            android:id="@+id/okko3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_below="@id/okko2"
            android:layout_marginStart="20dp"
            android:text="@string/adress_more_bold_text_for_gas_station_info"
            android:textColor="#8E93B5" />

        <TextView
            android:id="@+id/type_fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/StationName"
            android:layout_marginStart="20dp"
            android:text="@string/a_95_euro"
            android:textColor="#8E93B5"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B3B3B8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/volume_expected_vs_real"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="10dp"
            android:text="@string/refueling_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/density"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="10dp"
            android:text="@string/density_bold_text_for_gas_station_info"
            android:textColor="#32D853"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/time_driving"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="10dp"
            android:text="@string/days_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            android:text="@string/liters_all_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/volume_driving"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:text="@string/liters_bold_text_for_gas_station_info"
            android:textColor="#9176FF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume_consumed1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/volume_consumed"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume_consumed2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:text="@string/traveled_distance"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Volume_consumed3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:text="@string/days_in_use"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Refueling_on_this"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="210dp"
            android:text="@string/refueling_on_this_gas_station"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <TextView


            android:id="@+id/Density"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="270dp"
            android:text="@string/density"
            android:textColor="#878787"
            android:textSize="18sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />
    </RelativeLayout>

</LinearLayout>