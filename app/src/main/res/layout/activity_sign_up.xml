<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartjaegers.checkfuel.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical"
        tools:context="com.smartjaegers.checkfuel.Loading"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="29dp">

        <RelativeLayout
            android:id="@+id/confirm_password_layout"
            android:layout_width="352dp"
            android:layout_height="52dp"
            android:layout_below="@id/password_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/username">

            <EditText
                android:id="@+id/editTextPasswordConfirm"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="#B1B1B4"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/imageViewKeyGrayConfirm"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/key"
                android:src="@drawable/gray_key" />

            <ImageView
                android:id="@+id/imageViewKeyPurpleConfirm"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/key"
                android:src="@drawable/purple_key"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="352dp"
            android:layout_height="52dp"
            android:layout_below="@id/email_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/username">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="#B1B1B4"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/imageViewKeyGray"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/key"
                android:src="@drawable/gray_key" />

            <ImageView
                android:id="@+id/imageViewKeyPurple"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/key"
                android:src="@drawable/purple_key"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="352dp"
            android:layout_height="52dp"
            android:layout_below="@id/user_name_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/username">

            <EditText
                android:id="@+id/editTextEmailSignUp"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="#B1B1B4"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/imageViewMessageGray"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/email"
                android:src="@drawable/gray_message" />

            <ImageView
                android:id="@+id/imageViewMessagePurple"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/email"
                android:src="@drawable/purple_message"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_name_layout"
            android:layout_width="352dp"
            android:layout_height="52dp"
            android:layout_below="@id/create_account_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/username">

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/username"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="#B1B1B4"
                tools:ignore="LabelFor" />

            <ImageView
                android:id="@+id/imageViewUserGray"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/person"
                android:src="@drawable/gray_user" />

            <ImageView
                android:id="@+id/imageViewUserPurple"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/person"
                android:src="@drawable/purple_user"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="93dp"
            android:layout_height="125dp"
            android:layout_above="@+id/check_fuel_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo_check_fuel" />

        <TextView
            android:id="@+id/create_account_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/create_an_account"
            android:textColor="#646465"
            android:textSize="26sp"
            app:fontFamily="@font/maven_pro"
            tools:ignore="UnknownIdInLayout" />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="600dp"
            android:background="@drawable/violet_button"
            android:onClick="signUp"
            android:text="@string/sign_up"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="normal"
            app:fontFamily="@font/maven_pro" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonSignUp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Already have an account?"
                android:textColor="#302D2D" />

            <TextView
                android:id="@+id/log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:onClick="goToLogIn"
                android:text="log in"
                android:textColor="#9176FF"
                android:textColorHint="#FFFFFF" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>