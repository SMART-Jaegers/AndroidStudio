<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.checkfuel.frontend.GoodFuel">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#9176FF">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:onClick="backToGasStation"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/icons8_left_100" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/nameStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:text="@string/okko"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

            <TextView
                android:id="@+id/fuelType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="@string/a_95_euro"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/good_fuel_plus" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/the_density_of_this_fuel_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:text="@string/the_density_of_this_fuel"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

            <TextView
                android:id="@+id/should_be_within_this_range_in_good_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/the_density_of_this_fuel_in_good_fuel"
                android:layout_centerHorizontal="true"
                android:paddingTop="5dp"
                android:text="@string/should_be_within_this_range"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/Density"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="140dp"
            android:text="@string/textview"
            android:textColor="#32D853"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#745FC9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <View
            android:id="@+id/view3"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="85dp"
            android:background="#745FC9" />

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"
            android:background="#745FC9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/minDensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:text="@string/_700"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

            <TextView
                android:id="@+id/maxDensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:text="@string/_800"
                android:textColor="#9176FF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <TextView
                android:id="@+id/green_this_is_density_of_your_fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/this_is_density_of_your_fuel"
                android:textColor="#32D853"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="false">

            <Button
                android:id="@+id/btnhome"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/violet_button"
                android:onClick="backToMain"
                android:text="@string/go_home"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="normal"
                app:fontFamily="@font/maven_pro" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>