<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/layout_background"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/transparent"
    tools:context="com.smartjaegers.checkfuel.activities.NoWifi">

    <Button
        android:id="@+id/turnOnWifi"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/turn_on_button"
        android:shadowColor="#FFFFFF"
        android:text="@string/turn_on"
        android:textAllCaps="true"
        android:textColor="#FFFFFFFF"
        android:textSize="13sp"
        android:textStyle="normal"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/ignore"
        android:layout_width="80sp"
        android:layout_height="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/turn_on_button"
        android:shadowColor="#FFFFFF"
        android:text="@string/ignore"
        android:textAllCaps="true"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/wi_fi_connection"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/WifiSign"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/no_wi_fi_connection_sign"
        android:src="@drawable/wifi_disconnection_white" />

    <TextView
        android:id="@+id/success_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/there_s_no"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp" />

</RelativeLayout>