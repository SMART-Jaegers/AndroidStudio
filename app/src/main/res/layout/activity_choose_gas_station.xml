<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9176FF"
    android:onClick="stationOkko"
    android:orientation="vertical"
    tools:context="com.SmartJeagers.CheckFuel.ChooseGasStation">

    <RelativeLayout
        android:id="@+id/w"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/btnback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:onClick="backToMain"
            android:scaleType="centerCrop"
            android:src="@drawable/icons8_left_100__2_"
            android:contentDescription="@string/go_back" />

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icons8_settings_96"
            android:contentDescription="@string/settings" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/maven_pro"
            android:text="@string/choose_the_gas_station"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:visibility="visible" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/okko"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/okko"
                android:contentDescription="@string/gas_station_okko" />

            <View

                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#745FC9" />

            <ImageView
                android:id="@+id/wog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/wog"
                android:contentDescription="@string/gas_station_wog" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#745FC9" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/ukrNafta"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ukrnafta"
                    android:contentDescription="@string/gas_station_ukrnafta" />
            </FrameLayout>

            <View

                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#745FC9" />

            <LinearLayout
                android:id="@+id/shell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="176dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/shell_with_text"
                    android:contentDescription="@string/gas_station_shell"/>

            </LinearLayout>

        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#745FC9" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/socar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo_socar"
                    android:contentDescription="@string/gas_station_socar" />
            </FrameLayout>

            <View

                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#745FC9" />

            <FrameLayout
                android:id="@+id/upg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="149dp"
                    android:layout_height="244dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_upg1"
                    android:contentDescription="@string/gas_station_upg" />
            </FrameLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>