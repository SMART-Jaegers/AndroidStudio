<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.checkfuel.something">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity
            android:name="com.SmartJeagers.CheckFuel.SignUp"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.SignIn"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.NoBluetooth"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.NoWifi"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.ChooseFuelType"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.Loading"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.VolumeCompareGood"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.UsageStatistic"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.BadFuel"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.SetVolume"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.ChooseGasStation"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.MainActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.SmartJeagers.CheckFuel.GoodFuel"
            android:screenOrientation="locked" />
        <activity
            android:name="com.SmartJeagers.CheckFuel.VolumeCompareBad"
            android:screenOrientation="locked" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>